doctype html
html(lang="en")
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        title Test
        style
            include ../stylesheets/styles.css

        block scripts
            script(src='../js/jquery.min.js')
            script(src='../js/scripts.js')

    body
        .wrapper-body
            .modal-dialog
                .modal-content
                    // Modal Header
                    .modal-header
                        .wrapper-img
                            img
                        .wrapper-text
                            h4.modal-title Swedavia
                            p.text01 swedish airports
                    // Modal Body
                    .modal-body
                        form(role='form' method='GET' action='https://www.google.com/')
                            div.form-group
                                label(for='usrname') Username
                                input#usrname.form-control(type='text', name='usrname', required)
                            div.form-group
                                label(for='psw') Password
                                input#psw.form-control(type='password', name='psw', required, pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}")
                            .wrapper-button
                                button.btn.btn-primary(type="submit", name="asdf") Отправить
                                a.btn.btn-default Forgot password?

                    div#message
                        h3 Пароль должен содержать следующее
                        p#letter.invalid Строчная буква
                        p#capital.invalid Прописная буква
                        p#number.invalid Цифры
                        p#length.invalid Минимум 8 символов
